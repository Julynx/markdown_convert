{
    "actions": [
        {
            "text": "$(wand) Format",
            "command": "uv run ruff format markdown_convert",
            "color": "#e8c170"
        },
        {
            "text": "$(check) Lint",
            "command": "uv run ruff check markdown_convert; uv run yina lint markdown_convert",
            "color": "#73bed3"
        },
        {
            "text": "$(repo-pull) Pull",
            "command": "git pull",
            "color": "#d7b594"
        },
        {
            "text": "$(repo-push) Push",
            "command": "git add . && git commit && git push",
            "color": "#df84a5"
        },
        {
            "text": "$(debug-step-over) Bump",
            "command": "uv version --bump patch",
            "color": "#da863e"
        },
        {
            "text": "$(rocket) Publish",
            "command": "uv publish",
            "color": "#a8ca58"
        }
    ]
}